<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:background="#2C2B29">

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meet the Developers"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:fontFamily="sans-serif-medium" />

    <!-- Developer 1 Card -->
    <RelativeLayout
        android:id="@+id/developer1Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pageTitle"
        android:layout_marginTop="30dp"
        android:background="#4B4847"
        android:padding="16dp"
        android:elevation="6dp"
        android:layout_marginBottom="16dp"
        android:backgroundTintMode="src_in"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/developer1Image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/white_pawn"
            android:contentDescription="Developer 1 Image"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/shape_circle"
            android:backgroundTint="#4e7837"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/developer1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeesandee Joseph U. Caralde"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_toEndOf="@id/developer1Image"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/developer1Bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20-year-old Android developer passionate about creating seamless, user-friendly apps using Kotlin, with a focus on functional and visually appealing UI/UX designs."
            android:textSize="16sp"
            android:textColor="#EDEDED"
            android:layout_below="@id/developer1Name"
            android:layout_toEndOf="@id/developer1Image"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp" />

    </RelativeLayout>

    <!-- Developer 2 Card -->
    <RelativeLayout
        android:id="@+id/developer2Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/developer1Profile"
        android:layout_marginTop="8dp"
        android:background="#4B4847"
        android:padding="16dp"
        android:elevation="6dp"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/developer2Image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/black_pawn"
            android:contentDescription="Developer 2 Image"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/shape_circle"
            android:backgroundTint="#4e7837"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/developer2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blair Liam R. Carnice"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_toEndOf="@id/developer2Image"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/developer2Bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20-year-old mobile developer focused on building efficient, reliable apps and turning creative ideas into functional solutions."
            android:textSize="16sp"
            android:textColor="#EDEDED"
            android:layout_below="@id/developer2Name"
            android:layout_toEndOf="@id/developer2Image"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp" />

    </RelativeLayout>

    <!-- Footer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/developer2Profile"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:gravity="center">

        <TextView
            android:id="@+id/teamSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We specialize in Kotlin and Java for Android, focusing on UI/UX design to create efficient, user-friendly apps."
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textStyle="italic"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/contactButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:backgroundTint="#33691E"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Main content area -->
        <FrameLayout
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomNavigationBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bottom navigation bar -->
        <LinearLayout
            android:id="@+id/bottomNavigationBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:gravity="center_vertical"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/button_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_user"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/activity_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_home"
                android:text="PROFILE"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/button_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_settings"
                android:text="EDIT"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
